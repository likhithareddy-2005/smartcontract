pragma solidity 0.8.18;

contract Counter{
  address public admin;
  uint withdrawlimit;
  event wl(uint value);
  constructor(){
  admin=msg.sender;
  }
  modifier onlyadmin(){
    require(msg.sender==admin,"only the admin call the function");
    _;
  }
    function setwithdrawllimit(uint limit)public onlyadmin{
      withdrawlimit=limit;
      emit wl(withdrawlimit);
    }
  function getwl() view public returns(uint){
return withdrawlimit;
  }
    function withdrawfunds(uint amount)public view {
     require(amount<=withdrawlimit,"exceeded withdrawl limit.");
    

    }

}


